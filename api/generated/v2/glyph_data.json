{
  "$ref": "#/definitions/glyph_data",
  "definitions": {
    "glyph_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "description": "A globally unique identifier for a given object. Generally named after the object."
        },
        "word": {
          "type": "string",
          "minLength": 1
        },
        "word_id": {
          "$ref": "#/definitions/glyph_data/properties/id"
        },
        "usage_category": {
          "type": "string",
          "enum": [
            "core",
            "common",
            "uncommon",
            "obscure",
            "sandbox"
          ]
        },
        "creator_source": {
          "type": "string"
        },
        "creator": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "creation_date": {
          "type": "string",
          "pattern": "^(20\\d{2}-(0[1-9]|1[0-2])(-(0[1-9]|[12]\\d|3[01]))?)?$"
        },
        "primary": {
          "type": "boolean"
        },
        "deprecated": {
          "type": "boolean"
        },
        "image": {
          "type": "string"
        },
        "svg": {
          "type": "string"
        },
        "ligature": {
          "type": "string",
          "minLength": 1
        },
        "ucsur": {
          "type": "string",
          "pattern": "^U\\+[\\da-fA-F]{4,6}$"
        },
        "usage": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "propertyNames": {
            "pattern": "^20\\d{2}-(0[1-9]|1[0-2])$"
          }
        }
      },
      "required": [
        "id",
        "word",
        "word_id",
        "usage_category",
        "creator",
        "creation_date",
        "primary",
        "deprecated",
        "image",
        "svg",
        "usage"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}